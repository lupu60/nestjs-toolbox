{
  "name": "nestjs-toolbox",
  "description": "nestjs toolbox",
  "author": "bogdanlupu <lupu60@gmail.com>",
  "maintainers": [
    {
      "name": "bogdan lupu",
      "email": "lupu60@gmail.com"
    }
  ],
  "publicConfig": {
    "access": "public"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "private": "false",
  "homepage": "https://github.com/lupu60/nestjs-toolbox#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lupu60/nestjs-toolbox.git"
  },
  "bugs": {
    "url": "https://github.com/lupu60/nestjs-toolbox/issues"
  },
  "license": "MIT",
  "keywords": [
    "nestjs",
    "toolbox",
    "logger",
    "bunyan",
    "winston"
  ],
  "engines": {
    "node": "12",
    "npm": "6"
  },
  "scripts": {
    "bootstrap": "npm install lerna && lerna bootstrap && npm install",
    "format": "prettier --write \"packages/**/*.{ts,json}\"",
    "reset": "npm run cleanup && rimraf -rf node_modules && npm run bootstrap",
    "test": "lerna run test",
    "build": "npm run cleanup && lerna run compile",
    "cleanup": "lerna run cleanup --stream --parallel",
    "lint": "lerna run lint",
    "publish": "lerna publish --force-publish=* --skip-npm --skip-git",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@lerna/publish": "3.22.1",
    "@types/jest": "26.0.9",
    "jest": "26.2.2",
    "jest-github-reporter": "1.0.1",
    "jest-junit": "11.1.0",
    "lerna": "3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "rimraf": "^3.0.0",
    "standard-version": "8.0.0",
    "ts-jest": "26.1.4",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.3",
    "tslint-clean-code": "0.2.10",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
